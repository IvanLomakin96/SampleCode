<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonGetCert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Certificate" />

    <TextView
        android:id="@+id/textCerts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Certificates"
        android:minLines="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonInUse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Report InUse" />

        <Button
            android:id="@+id/buttonNotInUse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Report Not InUse" />
    </LinearLayout>

</LinearLayout>