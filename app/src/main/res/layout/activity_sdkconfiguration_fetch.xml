<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">



    <Button
        android:id="@+id/get_sdk_settings_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get SDK Settings from DB" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test_geofence"
        android:text="Test Geofence" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fetch_sdk_settings_server"
        android:text="Fetch SDK Settings from Server" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fetch_compliance_settings"
        android:text="Fetch,Execute And Report Compliance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/config_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="type int"/>

        <EditText
            android:id="@+id/config_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="version"/>

        <Button
            android:id="@+id/fetch_app_settings_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fetch App config" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_sdk_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ScrollView>

</LinearLayout>