<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:airwatch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:orientation="vertical" >

        <requestFocus />

        <TextView
            android:id="@+id/textViewDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Default Font:Hello World!"
            android:textSize="20dp" />

        <com.airwatch.ui.widget.AWTextView
            android:id="@+id/textViewRobotoRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            airwatch:awsdkFontStyle="regular"
            android:textIsSelectable="true"
            android:text="Roboto Regular:Hello World!"
            android:textSize="20dp" />

        <com.airwatch.ui.widget.AWTextView
            android:id="@+id/textViewRobotoLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            airwatch:awsdkFontStyle="light"
            android:textIsSelectable="true"
            android:text="Roboto Light:Hello World!"
            android:textSize="20dp" />

        <com.airwatch.ui.widget.AWTextView
            android:id="@+id/textViewRobotoMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            airwatch:awsdkFontStyle="medium"
            android:textIsSelectable="true"
            android:text="Roboto Medium:Hello World!"
            android:textSize="20dp" />

        <com.airwatch.ui.widget.AWTextView
            android:id="@+id/textViewRobotoBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            airwatch:awsdkFontStyle="bold"
            android:textIsSelectable="true"
            android:text="Roboto Bold:Hello World!"
            android:textSize="20dp" />
    </LinearLayout>

</ScrollView>