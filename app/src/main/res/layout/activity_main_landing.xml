<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/header_text"
        android:layout_below="@id/app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to AirWatch Sample App, Please Select the Module to Continue"
        />

    <Button
        android:id="@+id/sdk_btn"
        android:text="AirWatch Client SDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="onClick"
        android:background="@drawable/buttons_color"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/fw_btn"
        android:text="AirWatch Framework"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdk_btn"
        android:layout_centerInParent="true"
        android:onClick="onClick"
        android:background="@drawable/buttons_color"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/privacy_btn"
        android:text="AirWatch Privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fw_btn"
        android:layout_centerInParent="true"
        android:onClick="onClick"
        android:background="@drawable/buttons_color"
        android:layout_margin="5dp"/>


</RelativeLayout>

