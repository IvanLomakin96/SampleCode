<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/awsdk_primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/awsdk_primary_dark</item>
    </style>

    <style name="SecondAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/awsdk_green500</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/awsdk_grey700</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">@drawable/bg_password</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="edit_text_password" parent="edit_text">
        <item name="android:drawableLeft">@drawable/password_edit_text</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#004E6C</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="set_password_edit_text" parent="edit_text_password">
        <item name="android:imeOptions">actionNext</item>
        <!-- <item name="android:inputType">numberPassword|number|numberDecimal</item>  -->
    </style>

	<style name="edit_text_action_go" parent="edit_text_password">
        <item name="android:imeOptions">actionGo</item>
        <!-- <item name="android:inputType">numberPassword|number|numberDecimal</item>  -->
    </style>

	<style name="edit_text_userName" parent="edit_text">
        <item name="android:drawableLeft">@drawable/username</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#004E6C</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="text_view">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
		<item name="android:textColor">#666666</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="layoutBackGround">
        <item name="android:background">@color/aw_blue</item>
        <item name="android:gravity">center</item>
    </style>

	<style name="password_form_layout">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/bg_dialog</item>
        <item name="android:layout_margin">12dp</item>
    </style>

	<style name="login_header">
        <item name="android:layout_gravity">center_horizontal</item>
		<item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>